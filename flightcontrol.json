{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-2",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "batshit-app",
          "name": "Batshit or Not App",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 3,
          "autoscaling": {
            "targetCPU": 70,
            "targetMemory": 80
          },
          "port": 5000,
          "healthCheckPath": "/health",
          "healthCheckInterval": 30,
          "healthCheckTimeout": 10,
          "healthCheckHealthyThreshold": 2,
          "envVariables": {
            "NODE_ENV": {
              "value": "production"
            },
            "PORT": {
              "value": "5000"
            },
            "SESSION_SECRET": {
              "fromParameterStore": "batshit-session-secret"
            },
            "DATABASE_URL": {
              "fromService": {
                "id": "batshit-db",
                "value": "dbConnectionString"
              }
            }
          },
          "buildCommand": "npm run build",
          "startCommand": "npm start",
          "installCommand": "npm ci"
        }
      ],
      "databases": [
        {
          "id": "batshit-db",
          "name": "Batshit Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceClass": "db.t4g.micro",
          "storage": 20,
          "private": false,
          "deletionProtection": true,
          "autoMinorVersionUpgrade": true,
          "backupRetentionPeriod": 7,
          "multiAZ": false
        }
      ]
    },
    {
      "id": "staging",
      "name": "Staging",
      "region": "us-west-2",
      "source": {
        "branch": "develop"
      },
      "services": [
        {
          "id": "batshit-app-staging",
          "name": "Batshit or Not App (Staging)",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.25,
          "memory": 0.5,
          "minInstances": 1,
          "maxInstances": 1,
          "port": 5000,
          "healthCheckPath": "/health",
          "healthCheckInterval": 30,
          "healthCheckTimeout": 10,
          "healthCheckHealthyThreshold": 2,
          "envVariables": {
            "NODE_ENV": {
              "value": "development"
            },
            "PORT": {
              "value": "5000"
            },
            "SESSION_SECRET": {
              "fromParameterStore": "batshit-session-secret-staging"
            },
            "DATABASE_URL": {
              "fromService": {
                "id": "batshit-db-staging",
                "value": "dbConnectionString"
              }
            }
          },
          "buildCommand": "npm run build",
          "startCommand": "npm start",
          "installCommand": "npm ci"
        }
      ],
      "databases": [
        {
          "id": "batshit-db-staging",
          "name": "Batshit Database (Staging)",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceClass": "db.t4g.micro",
          "storage": 10,
          "private": false,
          "deletionProtection": false,
          "autoMinorVersionUpgrade": true,
          "backupRetentionPeriod": 1,
          "multiAZ": false
        }
      ]
    }
  ]
}