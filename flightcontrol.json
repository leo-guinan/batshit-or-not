{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-2",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "batshit-web",
          "name": "Batshit or Not Web",
          "type": "web",
          "buildType": "nixpacks",
          "target": {
            "type": "fargate"
          },
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 3,
          "port": 5000,
          "buildCommand": "npm run build",
          "startCommand": "npm start",
          "ci": {
            "type": "ec2"
          },
          "healthCheckPath": "/health",
          "healthCheckInterval": 30,
          "healthCheckTimeout": 10,
          "envVariables": {
            "NODE_ENV": "production",
            "PORT": "5000",
            "SESSION_SECRET": {
              "fromParameterStore": "batshit-session-secret"
            },
            "DATABASE_URL": {
             "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            }
          }
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceClass": "db.t4g.micro",
          "storage": 20,
          "private": false
        }
      ]
    }
  ]
}