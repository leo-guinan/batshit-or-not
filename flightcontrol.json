{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-2",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "app",
          "name": "Batshit or Not",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 3,
          "port": 5000,
          "healthCheckPath": "/health",
          "envVariables": {
            "NODE_ENV": "production",
            "PORT": "5000",
            "SESSION_SECRET": {
              "fromParameterStore": "batshit-session-secret"
            }
          },
          "databaseConnections": [
            {
              "databaseId": "db",
              "envVarName": "DATABASE_URL"
            }
          ]
        }
      ],
      "databases": [
        {
          "id": "db",
          "name": "postgres",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceClass": "db.t4g.micro",
          "storage": 20,
          "private": false
        }
      ]
    }
  ]
}